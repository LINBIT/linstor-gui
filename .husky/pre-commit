# Run style checks
echo "ğŸ” Running style checks..."

# 1. ESLint check
echo "ğŸ“‹ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix the errors above."
  exit 1
fi

# 2. Prettier format check on staged files
echo "ğŸ¨ Running Prettier on staged files..."
staged_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx|json|css|scss|md)$' | tr '\n' ' ')
if [ -n "$staged_files" ]; then
  npx prettier --check $staged_files
  if [ $? -ne 0 ]; then
    echo "âŒ Prettier failed. Please fix the formatting issues above."
    echo "ğŸ’¡ You can run: npx prettier --write $staged_files"
    exit 1
  fi
else
  echo "ğŸ“ No staged files found that need Prettier check."
fi

# 3. TypeScript type check
echo "ğŸ“ Running TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix the type errors above."
  exit 1
fi

# 4. Run tests
echo "ğŸ§ª Running tests..."
npm test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests above."
  exit 1
fi

echo "âœ… All checks passed! Ready to commit."
